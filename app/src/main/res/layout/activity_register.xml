<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/edt_email_signUp"
                    android:layout_width="372dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_edit_text_login"
                    android:hint="Email"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />

                <EditText
                    android:id="@+id/edt_password_signUp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="372dp"
                    android:layout_height="52dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/custom_edit_text_login"
                    android:hint="Mat khau"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:inputType="textPassword"
                    />
                <EditText
                    android:id="@+id/edt_retype_password_signUp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="372dp"
                    android:layout_height="52dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/custom_edit_text_login"
                    android:hint="Nhap lai mat khau"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"

                    android:inputType="textPassword"
                    />
                <EditText
                    android:id="@+id/edt_name_signUp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="372dp"
                    android:layout_height="52dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/custom_edit_text_login"
                    android:hint="Tên của bạn"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"

                    />
                <EditText
                    android:id="@+id/edt_phone_signUp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="372dp"
                    android:layout_height="52dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/custom_edit_text_login"
                    android:hint="Số Điện Thoại"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:inputType="phone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    >

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Giới Tính"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rad_gender_female_signUp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Nam"
                            android:textColor="@android:color/black"
                            android:buttonTint="@android:color/black"
                            />

                        <RadioButton
                            android:id="@+id/rad_gender_male_signUp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:buttonTint="@android:color/black"
                            android:text="Nữ"
                            android:textColor="@android:color/black" />
                    </RadioGroup>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_signUp"
                    android:layout_width="372dp"
                    android:layout_height="52dp"
                    android:text="ĐĂNG KÝ"
                    android:background="@drawable/custom_button_login"
                    android:width="300dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>