<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/frameTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:background="@color/bg_user_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:src="@drawable/ic_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_82sdp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Tiêu đề"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_18sdp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/add_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edit_text_border"
                android:drawableRight="@drawable/ic_location"
                android:ems="10"
                android:hint="Vị trí"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/add_size_room"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Kích thước"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_18sdp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/add_rent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Giá tiền thuê"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_18sdp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/add_price_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edit_text_border"
                android:gravity="start"
                android:hint="Mô tả"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="5"
                android:maxLines="5"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_18sdp"
                android:textColorHint="@color/black"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/btn_add_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:backgroundTint="#D9D9D9"
                android:text="Thêm Ảnh"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_add_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="#D9D9D9"
                />

            <EditText
                android:id="@+id/add_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Thanh toán"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_18sdp"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/btn_post"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:backgroundTint="#008080"
                android:text="Đăng"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>